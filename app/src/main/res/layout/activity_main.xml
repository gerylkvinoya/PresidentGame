<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#918A88"
                android:gravity="center"
                android:text="TIME: 24 SECONDS"
                android:textColor="#000000"
                android:textSize="25dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/scoreboardText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/scoreboard"
                android:gravity="center"
                android:text="SCOREBOARD"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spaceText"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/scoreboard" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/scoreboard"
                    android:gravity="left"
                    android:text="You: 10 \nPlayer 1: 5 \nPlayer 2: 3 \nCPU 1: 2"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/player2Text"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#000000"
                android:gravity="center"
                android:text="PLAYER 2"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/player1Text"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#000000"
                android:gravity="center"
                android:text="PLAYER 1"
                android:textColor="#FFFFFF"
                android:textSize="14dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backCard"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    app:srcCompat="@drawable/card_back" />

                <ImageView
                    android:id="@+id/sevenSpades"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_weight="10"
                    android:layout_gravity="left"
                    app:srcCompat="@drawable/seven_spades" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/queenHeart"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/queen_clubs" />

                <ImageView
                    android:id="@+id/threeSpades"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/three_spades" />

                <ImageView
                    android:id="@+id/tenDiamond"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ten_diamonds" />

                <ImageView
                    android:id="@+id/twoClub"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/two_clubs" />

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/userPlayer"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#FCFC7A"
                android:gravity="center"
                android:text="YOU"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    />

                <Button
                    android:id="@+id/playButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/scoreboard"
                    android:layout_weight="1"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:text="PLAY" />


                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/passButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/scoreboard"
                    android:layout_weight="1"
                    android:text="PASS"
                    android:gravity="center"
                    android:textSize="25dp"/>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/leaveGamebutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/scoreboard"
                android:text="LEAVE GAME"

                android:gravity="center"
                android:textSize="25dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/scoreboard"
                android:text="PAUSE"
                android:gravity="center"
                android:textSize="25dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/cpu1Text"
                android:text="CPU 1"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#000000"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="14dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/tradeButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/scoreboard"
                android:text="TRADE"
                android:gravity="center"
                android:textSize="25dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/orderButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/scoreboard"
                android:text="ORDER"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="25dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
